<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Poliklinika.Mobile.ViewModels"
             x:Class="Poliklinika.Mobile.Views.Register">
    <ContentPage.BindingContext>
        <vm:RegisterVM></vm:RegisterVM>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" >
            <Label Text="Unesi email i šifru. Pritiskom na dugme Kreiraj, napravi svoj profil"
                   FontSize="Medium" Padding="0,30,0,0" TextColor="Orchid"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"/>
            <Label Text="Email" />
            <Entry Text="{Binding Username}"  Placeholder="" />
            <Label Text="Šifra" />
            <Entry Text="{Binding Password}"  Placeholder="" IsPassword="True" />
            <Button VerticalOptions="Center" Text="Kreiraj" Command="{Binding RegisterCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>